<!DOCTYPE html>
<html>
  <head>
    <title>NextStep</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header>
      <%= render 'common/header' %>
    </header>

    <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
    <% end %>

    <div class="main-view">
      <%= yield %>
    </div>

    <footer>
      <%= render 'common/footer' %>
    </footer>
  </body>
</html>
